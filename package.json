{
  "name": "@dopplerhq/mcp-server",
  "version": "0.0.0",
  "private": true,
  "description": "MCP server for Doppler API with auto-generated tools from OpenAPI specification",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "doppler-mcp": "bin/doppler-mcp"
  },
  "scripts": {
    "fetch-openapi": "curl -s https://docs.doppler.com/openapi/core.json -o doppler-openapi.json",
    "prebuild": "npm run fetch-openapi",
    "build": "tsc && cp doppler-openapi.json dist/",
    "dev": "tsx --esm src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "doppler",
    "secrets",
    "api",
    "openapi",
    "model-context-protocol"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "provenance": true
  },
  "dependencies": {
    "@napi-rs/keyring": "^1.1.6",
    "fastmcp": "^3.10.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
